# oStaran AI Agent Platform - Environment Variables

# =============================================================================
# AI/LLM API Keys
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Supabase Configuration (oStaran Database)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# Web Search (Tavily)
# =============================================================================
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# MCP Integration - Enable Model Context Protocol
# =============================================================================
ENABLE_MCP=true
ENABLE_CRM_MCP=true

# =============================================================================
# CRM MCP Server Configuration
# =============================================================================
# Path to the CRM MCP server (absolute path)
CRM_MCP_SERVER_PATH=/home/user/oStaran/crm-mcp-server/dist/mcp/server.js

# CRM User Configuration
CRM_MCP_USER_EMAIL=your-email@example.com

# CRM Supabase Configuration
CRM_SUPABASE_URL=https://your-crm-project.supabase.co
CRM_SUPABASE_KEY=your_crm_supabase_anon_key

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
